<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="BootyTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/animationtranslatein</item>
        <item name="android:windowExitAnimation">@anim/animationtranslateout</item>
	</style>
	
    <!-- Animation for dialog box -->
    <style name="DialogTranslateEntranceAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>